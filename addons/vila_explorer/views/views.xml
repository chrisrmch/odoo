<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="vila_explorer.list">
      <field name="name">vilaExplorer list</field>
      <field name="model">vila_explorer.vila_explorer</field>
      <field name="arch" type="xml">  
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>

 
    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="vila_explorer.action_window">
      <field name="name">vilaExplorer window</field>
      <field name="res_model">vila_explorer.vila_explorer</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="vila_explorer.action_server">
      <field name="name">vilaExplorer server</field>
      <field name="model_id" ref="model_vila_explorer_vila_explorer"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="vilaExplorer" id="vila_explorer.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="vila_explorer.menu_1" parent="vila_explorer.menu_root"/>
    <menuitem name="Menu 2" id="vila_explorer.menu_2" parent="vila_explorer.menu_root"/>

    <!-- actions -->  

    <menuitem name="List" id="vila_explorer.menu_1_list" parent="vila_explorer.menu_1"
              action="vila_explorer.action_window"/>
    <menuitem name="Server to list" id="vila_explorer" parent="vila_explorer.menu_2"
              action="vila_explorer.action_server"/>

  </data>
</odoo>